<Window x:Class="Therefore.Samples.PropertyChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PropertyChangeWindow" Height="123" Width="247" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Value" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txt_value" HorizontalAlignment="Left" Height="23" Margin="55,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="174"/>
        <Button Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="154,58,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
        <Button Name="btn_OK" Content="OK" HorizontalAlignment="Left" Margin="74,58,0,0" VerticalAlignment="Top" Width="75" Click="btn_OK_Click"/>

    </Grid>
</Window>
