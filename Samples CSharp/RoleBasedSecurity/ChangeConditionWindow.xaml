<Window x:Class="RoleBasedSecurity.ChangeConditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoleBasedSecurity"
        mc:Ignorable="d"
        Title="Change Condition" Height="110" Width="400" MinHeight="110" MaxHeight="110" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <TextBox Name="txt_condition" Height="23" Margin="80,14,10,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top"/>
        <Label Content="Condition:" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top"/>
        <Button Name="btn_cancel" IsCancel="True" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>
        <Button Name="btn_ok" IsDefault="True" Content="OK" HorizontalAlignment="Right" Margin="0,0,100,10" VerticalAlignment="Bottom" Width="75" Click="btn_ok_Click"/>
    </Grid>
</Window>
