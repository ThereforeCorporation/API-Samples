<Window x:Class="Therefore.Samples.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Therefore.Samples"
        mc:Ignorable="d"
        Title="LanguageSelectionWindow" Height="123" Width="247" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Language" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="154,58,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
        <Button Name="btn_OK" Content="OK" HorizontalAlignment="Left" Margin="74,58,0,0" VerticalAlignment="Top" Width="75" Click="btn_OK_Click"/>
        <ComboBox Name="cmb_languages" DisplayMemberPath="DisplayName" HorizontalAlignment="Left" Margin="74,14,0,0" VerticalAlignment="Top" Width="155"/>

    </Grid>
</Window>
